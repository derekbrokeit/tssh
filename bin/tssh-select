#!/bin/sh
# Copyright 2012 Derek Ashley Thomas

if [[ $COMP_TYPE != "local" ]] ; then
    echo "*** Please use osselect from a local computer, not $HOSTNAME"
    exit
fi
if [[ -f $HOME/.gpg ]] ; then
    # load the gpg agent info
    . $HOME/.gpg
fi

while true; do
    read -p "Server: " server
    tssh $server && break  
done
